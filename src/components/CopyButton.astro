---
// CopyButton.astro
const { text } = Astro.props;
---

<script>
    document.addEventListener('DOMContentLoaded', () => {
      const copyTextElements = document.querySelectorAll('.copy-text');
  
      copyTextElements.forEach((element) => {
        const originalText = element.innerText;
        const copyText = element.dataset.copyText; // Get the custom text to be copied
  
        element.addEventListener('click', () => {
          // Copy the custom text to clipboard
          navigator.clipboard.writeText(copyText).then(() => {
            // Change the text to "Text copied!" for 0.8 seconds
            element.innerText = 'Command copied!';
  
            // Revert back to the original text after 0.8 seconds
            setTimeout(() => {
              element.innerText = originalText;
            }, 800);
          });
        });
      });
    });
  </script>
