class Header extends HTMLElement {
  audio;
  lastTrailTime = 0;
  trailInterval = 12.5;
  trailEnabled = true;
  hitsoundEnabled = true;

  globalClickHandler = (e: MouseEvent) => {
    this.playClickSound();
  };

